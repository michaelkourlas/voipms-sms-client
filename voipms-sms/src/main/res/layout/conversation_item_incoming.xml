<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/margin"
    android:layout_marginTop="@dimen/conversation_item_margin_top_primary"
    android:layout_marginEnd="@dimen/margin"
    android:orientation="vertical">

    <TextView
        android:id="@+id/top_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/half_margin"
        android:gravity="center"
        android:textAppearance="@style/Body2"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/photo_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_gravity="bottom"
            android:layout_marginEnd="@dimen/margin">

            <net.kourlas.voipms_sms.ui.CustomQuickContactBadge
                android:id="@+id/photo"
                android:layout_width="@dimen/contact_badge"
                android:layout_height="@dimen/contact_badge"
                android:layout_gravity="center_vertical"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/photo_letter"
                android:layout_width="@dimen/contact_badge"
                android:layout_height="@dimen/contact_badge"
                android:gravity="center"
                android:textAppearance="@style/Headline5"
                android:textColor="@android:color/white" />
        </FrameLayout>

        <View
            android:id="@+id/placeholder"
            android:layout_width="@dimen/contact_badge"
            android:layout_height="@dimen/contact_badge"
            android:layout_alignParentEnd="true"
            android:layout_gravity="bottom"
            android:layout_marginStart="@dimen/margin" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/placeholder"
            android:layout_toEndOf="@id/photo_layout"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/sms_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:minHeight="@dimen/contact_badge"
                android:orientation="vertical"
                android:padding="@dimen/sms_container_padding">

                <net.kourlas.voipms_sms.conversation.MessageTextView
                    android:id="@+id/message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/Body1"
                    android:textColor="@android:color/white"
                    android:textColorLink="@android:color/white" />
            </LinearLayout>

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textAppearance="@style/Caption"
                android:visibility="gone" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>


